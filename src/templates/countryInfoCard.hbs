{{#with this}}
<li class="li_info">
    <img src="{{flags}}" alt="" width="40" class="img">
    <span class="span_name">{{name}}</span>
</li>
<li class="li_info">Capital:
    <span class="span_info">{{capital}}
    </span>
</li>
<li class="li_info">Population:
    <span class="span_info">{{population}}
    </span>
</li>
<li class="li_info">Languages:
    <span class="span_info">{{#each languages}}
        {{#if @last}} {{this}}
        {{else}} {{this}},
        {{/if}}
        {{/each}}
    </span>
</li>
{{/with}}